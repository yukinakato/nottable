<div class="user-card">
  <div class="user-card-info">
    <div class="mr-4">
      <%= get_user_avatar(user, size: 80) %>
    </div>
    <div class="p-2 h-100">
      <p class="user-card-name mb-1"><%= link_to user.display_name, user_path(user) %></p>
      <p class="user-card-introduce mb-0"><%= user.introduce %></p>
    </div>
  </div>
  <div class="d-flex align-items-center user-card-follow-form">
    <%= render "relationships/follow_form", user: user %>
  </div>
</div>
