<div class="list-and-view">
  <div class="left-pane">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item left-pane-tab">
        <a class="nav-link active text-center" id="mynotes-tab" data-toggle="tab" href="#mynotes">
          <i class="fas fa-book-reader"></i>
          <p class="tab-icon-description">マイノート</p>
        </a>
      </li>
      <li class="nav-item left-pane-tab">
        <a class="nav-link text-center" id="bookmarks-tab" data-toggle="tab" href="#bookmarks">
          <i class="fas fa-bookmark"></i>
          <p class="tab-icon-description">ブックマーク</p>
        </a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane show active" id="mynotes">
        <ul>
          <%= render partial: 'notes/list', collection: notes, as: :note %>
        </ul>
      </div>
      <div class="tab-pane" id="bookmarks">
        <%= render partial: 'notes/list', collection: bookmarked_notes, as: :note %>
      </div>
    </div>
  </div>
  <div class="right-pane">
    <% case mode %>
    <% when Constants::MODE_BUILDER %>
    <%= render 'notes/builder', note: note %>
    <% when Constants::MODE_EDITOR %>
    <%= render 'notes/editor', note: note %>
    <% else # Constants::MODE_VIEWER expected %>
      <% if note.nil? %>
        <%= render 'notes/none' %>
      <% else %>
        <%= render 'notes/viewer', note: note %>
      <% end %>
    <% end %>
  </div>
</div>
